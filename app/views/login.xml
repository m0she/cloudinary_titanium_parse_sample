<Alloy>
  <Window class="container" fullscreen="false" layout="vertical" exitOnClose="true">
    <TextField id="username" hintText="Username" />
    <TextField id="password" hintText="Password" passwordMask="true" />
    <View layout="horizontal" id="signin_row">
      <ImageView id="poweredby" />
      <Button id="submit" title="Sign in or register" onClick="this.doSubmit" />
    </View>
  </Window>
</Alloy>
